@model LabCRUDTask.Models.Department
@*@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@

<style>

    .center_div {
        margin: 0 auto;
        width: 40% /* value of your choice which suits your alignment */
    }
</style>

<div class=" container center_div">

    <form action="/Department/Create" method="post">
        <h2>Add New Department</h2>
        <div class="form-group">
            <label>Department Name</label>
            <input type="text" class="form-control" name="Name" value="@Model.Name" placeholder="Enter Department name">
            @Html.ValidationMessage("Name", htmlAttributes: new { @class = "text-danger" })

        </div>

        <button type="submit" class="btn btn-primary">Add</button>

    </form>

</div>

