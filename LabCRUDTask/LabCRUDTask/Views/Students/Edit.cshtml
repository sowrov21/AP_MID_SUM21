@*@model LabCRUDTask.Models.Student*@

@model LabCRUDTask.Models.ViewModel.StudentDepartmentVM
@{
    ViewBag.Title = "Edit";
}

<style>

    .center_div {
        margin: 0 auto;
        width: 40% /* value of your choice which suits your alignment */
    }
</style>

<div class=" container center_div">
    
    <h2>Register New Student</h2>


    <form action="" method="post">

        <input type="hidden" name="Id" value="@Model.Student.Id">

        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="Name" value="@Model.Student.Name" placeholder="Enter student name">
            @Html.ValidationMessage("Name",htmlAttributes: new { @class="text-danger"})
        </div>

        <div class="form-group">
            <label>Department</label>
            <select class="form-control" name="Dept_id">
                @foreach (var dept in @Model.Departments)

                {
                    <option value="@dept.Id"
                            @(Model.Student.Dept_id == dept.Id ? "selected" : "")>
                        @dept.Name
                    </option>
                }

            </select>
            @Html.ValidationMessage("Dept_id", htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Credit</label>
            <input type="number" class="form-control" name="Credit" value="@Model.Student.Credit" placeholder="100">
            @Html.ValidationMessage("Credit",htmlAttributes: new { @class="text-danger" })
        </div>
        <div class="form-group">
            <label>CGPA</label>
            <input type="number" class="form-control" name="CGPA" value="@Model.Student.CGPA" placeholder="4.00">
            @Html.ValidationMessage("CGPA", htmlAttributes: new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Date Of Birth</label>
            <div class='input-group date' id='datetimepicker1'>
                <input type='text' class="form-control" name="DOB" value="@Model.Student.DOB" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>

            </div>
            @Html.ValidationMessage("DOB", htmlAttributes: new { @class = "text-danger" })
        </div>


        <button type="submit" class="btn btn-primary">Update</button>
    </form>

</div>

@section Scripts
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/momentjs/2.14.1/moment.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js"></script>


    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker({
                format: "DD/MM/YYYY hh:mm:ss"

            });
        });
    </script>
}

